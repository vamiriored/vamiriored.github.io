---
const name = "Daniel Ma";
const role = "Editor & Sound Designer";
const email = "ma.daniel.331@gmail.com";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{name} — {role}</title>
    <meta name="description" content="Selected work in editing and sound. Portfolio and contact." />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@300;400;500&display=swap" rel="stylesheet" />

    <style>
      :root { color-scheme: dark; }
      body { margin:0; background:#0f0f0f; color:#f5f5f5; font-family:Inter,system-ui,sans-serif; }
      .wrap { max-width: 980px; margin: 0 auto; padding: 72px 20px; }
      h1 { font-family:"Playfair Display",serif; font-size: clamp(44px, 6vw, 72px); margin:0 0 12px; letter-spacing: -0.02em; }
      .sub { font-size: 18px; opacity: .9; margin: 0 0 28px; }
      nav a { display:inline-block; margin-right: 18px; padding: 10px 0; color:#f5f5f5; text-decoration:none; opacity:.9; }
      nav a:hover { opacity:1; text-decoration: underline; }
      .card { margin-top: 40px; padding: 18px; border: 1px solid rgba(255,255,255,.12); border-radius: 16px; }
      .muted { opacity: .75; }
    </style>
  </head>

  <body>
    <main class="wrap">
      <h1>{name}</h1>
      <p class="sub">{role}</p>

      <nav>
        <a href="/work">Selected Work</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>

      <section class="card">
        <p class="muted" style="margin:0 0 10px;">Reel</p>
        <p style="margin:0;">Drop a Vimeo/YouTube embed here when you’re ready.</p>
      </section>

      <p style="margin-top: 28px;" class="muted">
        Email: <a href={"mailto:" + email} style="color:inherit;">{email}</a>
      </p>
    </main>
  </body>
</html>
