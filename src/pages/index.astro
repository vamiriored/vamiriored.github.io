---
const name = "Daniel Ma";
const role = "Editor & Sound Designer";
const email = "ma.daniel.331@gmail.com";

const featured = [
  {
    title: "I Know the End",
    role: "Sound Designer",
    desc: "WAVE Awards — Student Audio / Sound Design (Merit). Available upon request.",
    linkText: "Request access",
    link: "mailto:ma.daniel.331@gmail.com?subject=Work%20Request%20-%20I%20Know%20the%20End",
  },
  {
    title: "Music Video",
    role: "Assistant Director / Second Camera",
    desc: "Assisted with on-set coordination and secondary camera operation for independent music video production.",
    linkText: "Watch on YouTube",
    link: "https://www.youtube.com/watch?v=bwKY3kTUUU8",
  },
  {
    title: "Professor Proficiency",
    role: "Editor / Sound",
    desc: "Ongoing editorial and audio work for an educational YouTube series.",
    linkText: "View channel",
    link: "https://www.youtube.com/@ProfessorProficiency",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{name} — {role}</title>
    <meta name="description" content="Selected work in editing and sound. Portfolio and contact." />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@300;400;500&display=swap" rel="stylesheet" />

    <style>
      :root { color-scheme: dark; }
      body { margin:0; background:#0f0f0f; color:#f5f5f5; font-family:Inter,system-ui,sans-serif; }
      .wrap { max-width: 980px; margin: 0 auto; padding: 72px 20px; }
      h1 { font-family:"Playfair Display",serif; font-size: clamp(44px, 6vw, 72px); margin:0 0 12px; letter-spacing: -0.02em; }
      .sub { font-size: 18px; opacity: .9; margin: 0 0 28px; }
      nav a { display:inline-block; margin-right: 18px; padding: 10px 0; color:#f5f5f5; text-decoration:none; opacity:.9; }
      nav a:hover { opacity:1; text-decoration: underline; }
      .grid { display:grid; gap:16px; margin-top: 26px; }
      .card { padding: 18px; border: 1px solid rgba(255,255,255,.12); border-radius: 16px; }
      .top { display:flex; justify-content:space-between; gap:12px; flex-wrap:wrap; }
      .muted { opacity: .75; }
      a { color: inherit; }
      .sectionTitle { margin-top: 40px; margin-bottom: 12px; font-size: 14px; letter-spacing: .08em; text-transform: uppercase; opacity: .7; }
      .footer { margin-top: 28px; }
    </style>
  </head>

  <body>
    <main class="wrap">
      <h1>{name}</h1>
      <p class="sub">{role}</p>

      <nav>
        <a href="/work">Selected Work</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>

      <div class="sectionTitle">Selected Work</div>

      <div class="grid">
        {featured.map((it) => (
          <section class="card">
            <div class="top">
              <strong>{it.title}</strong>
              <span class="muted">{it.role}</span>
            </div>
            <p class="muted" style="margin:10px 0 0;">{it.desc}</p>
            <p style="margin:12px 0 0;">
              <a href={it.link}>{it.linkText}</a>
            </p>
          </section>
        ))}
      </div>

      <div class="footer muted">
        Email: <a href={"mailto:" + email}>{email}</a>
      </div>
    </main>
  </body>
</html>
